<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/rain" >

    <VideoView
        android:id="@+id/video2"
        android:layout_width="405dp"
        android:layout_height="720dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="100dp" />

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:layout_marginRight="20dp" >

        <Button
            android:id="@+id/home"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:text="@string/home"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="35sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/serverStatus"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="visible" />

        <Button
            android:id="@+id/back"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_above="@+id/home"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="19dp"
            android:text="@string/back"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="35sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/fill"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="150dp"
            android:text="@string/fill"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="75sp"
            android:textStyle="bold"
            android:typeface="monospace" />
    </RelativeLayout>

	<TextView
	    android:id="@+id/info"
	    android:layout_width="600dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="top"
	    android:layout_margin="10dp"
	    android:background="@color/black_overlay"
	    android:gravity="center_horizontal"
	    android:textColor="@android:color/primary_text_dark"
	    android:textSize="44sp" />

	<TextView
	    android:id="@+id/instruction"
	    android:layout_width="600dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="bottom"
	    android:layout_margin="10dp"
	    android:background="@color/black_overlay"
	    android:gravity="center_horizontal"
	    android:text="@string/instruction"
	    android:textColor="@android:color/primary_text_dark"
	    android:textSize="40sp" />

	<LinearLayout
	    android:id="@+id/device_error"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/rain"
	    android:orientation="horizontal"
	    android:visibility="gone" >
    <TextView
        android:id="@+id/klaida"
        android:layout_width="664dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:background="@color/black_overlay"
        android:gravity="center"
        android:text="@string/eNoBottle"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="60sp" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:layout_marginRight="20dp" >
        <Button
            android:id="@+id/try_again_dev"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/tryAgain"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="35sp"
            android:typeface="monospace" />
    </RelativeLayout>
</LinearLayout>

<LinearLayout
    android:id="@+id/database_error"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/rain"
    android:orientation="horizontal"
    android:visibility="gone" >

    <TextView
        android:id="@+id/klaidaDatabase"
        android:layout_width="664dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:background="@color/black_overlay"
        android:gravity="center"
        android:text="@string/eNoData"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="60sp" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:layout_marginRight="20dp" >
        <Button
            android:id="@+id/try_again_db"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="250dp"
            android:text="@string/tryAgain"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="35sp"
            android:typeface="monospace" />
    </RelativeLayout>
</LinearLayout>

<LinearLayout
    android:id="@+id/success"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/rain"
    android:orientation="horizontal"
    android:visibility="gone" >

    <TextView
        android:id="@+id/thanks"
        android:layout_width="700dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:background="@color/black_overlay"
        android:gravity="center"
        android:text="@string/thanks"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="45sp"
        android:typeface="monospace" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:layout_marginRight="20dp" >
        <Button
            android:id="@+id/home_success"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/home"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="35sp"
            android:typeface="monospace" />

        </RelativeLayout>

</LinearLayout>

<RelativeLayout
    android:id="@+id/progress"
    android:layout_width="600dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_margin="10dp"
    android:background="@color/black_overlay"
    android:gravity="center"
    android:paddingBottom="40dp"
    android:paddingTop="40dp" >

    <TextView
        android:id="@+id/labelFilling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="Filling..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelFilling"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/step" />

        <ImageView
            android:id="@+id/step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/step" />

        <ImageView
            android:id="@+id/step3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/step" />

        <ImageView
            android:id="@+id/step4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/step" />

        <ImageView
            android:id="@+id/step5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/step" />

        <ImageView
            android:id="@+id/step6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/step" />
    </LinearLayout>

</RelativeLayout>

</FrameLayout>